@model Web.Test.Controllers.Product
<style>
    .bubble {
        background-color: #fac400;
        height: 36px;
        width: 64px;
        padding: 0 8px;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        border-radius: 18px;
        border-top-right-radius: 4px;
    }

    .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: #eeeeee;
        animation: bounce 1000ms infinite;
    }

        .dot:nth-of-type(2) {
            -wekit-animation-delay: 50ms;
            animation-delay: 50ms;
        }

        .dot:nth-of-type(3) {
            -wekit-animation-delay: 100ms;
            animation-delay: 100ms;
        }

    @@keyframs bounce {
        0% {
            transform: translateY(0);
        }

        10% {
            transform: translateY(2px);
        }

        20% {
            transform: translateY(0);
        }
    }

    .has-float-label > label {
        color: #0ea960;
    }
</style>
<FilterPanel>
    <DropDownFilterItem title="name" id="nameFilter" />
    <CustomeBobyFilter id="familyFilter" title="family">
        <ol class="list-group list-group-numbered px-0">
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="form-check">
                    <input class="filterInput familyFilter" type="checkbox" data-lbl="chk_1" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Default checkbox
                    </label>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="form-check">
                    <input class="filterInput familyFilter" type="checkbox" data-lbl="chk__2" id="flexCheckChecked">
                    <label class="form-check-label" for="flexCheckChecked">
                        Checked checkbox
                    </label>
                </div>
            </li>
        </ol>
    </CustomeBobyFilter>
    <FilterItem>
        <FilterBadge>
            تاریخ:
            <span class="badge badge-warning" id="dateFromFilter2-has"></span>
            <span class="badge badge-warning" id="dateToFilter2-has"></span>
            <i class="las la-angle-down"></i>
        </FilterBadge>
        <FilterBody>
            <div class="p-2 pt-4">
                <PersianDatePickerBs5 class="filterInput" id="dateFromFilter"/>
                <PersianDatePickerBs5 class="filterInput" id="dateToFilter" />
            </div>
        </FilterBody>
    </FilterItem>
</FilterPanel>
<div class="card" style="margin-top:50px;">
    <div class="card-body">

        <form asp-action="Index" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12">

                    <ShareBtnBs4 use-current-url="true" class="float-left btn-success" />
                    <ShareBtnBs5 use-current-url="true" class="float-left btn-danger" />
                    <FloatingLabelInputGroup label="First and last name">
                        <input class="form-control" asp-for="Name" type="text" />
                        <input class="form-control" asp-for="Family" type="text">
                        <inputGroupAddon>
                            <button class="btn btn-navbar" type="submit">
                                <i class="las la-search"></i>
                            </button>
                        </inputGroupAddon>
                    </FloatingLabelInputGroup>

                    <FloatingLabelInput label="آواتار">
                        <imageChooserfor asp-for="Img"/>
                    </FloatingLabelInput>

                    <FloatingLabelInputGroup label="نام">
                        <input class="form-control" asp-for="Name" placeholder="نام" type="text" />
                    </FloatingLabelInputGroup>

                    <FloatingLabelInputGroup label="Family">
                        <input class="form-control" asp-for="Family" placeholder="Family" />
                    </FloatingLabelInputGroup>

                    <FloatingLabelInput asp-for="Name" label="کشور">
                        <select class="form-control custom-select">
                            <option selected>United States</option>
                            <option>Canada</option>
                            <option>...</option>
                        </select>
                    </FloatingLabelInput>

                    <FloatingLabelInput asp-for="Tags" label="tags">
                        <TagInputFor asp-for="Tags" seperator=","/>
                    </FloatingLabelInput>

                    <Bs4FormGroup label="">
                        <SwitchFor asp-for="IsActive" label="Is Active" />
                    </Bs4FormGroup>



                    <FloatingLabelInput label="تاریخ ایحاد">
                        <PersianDatePickerBs5For asp-for="CreateDate" />
                    </FloatingLabelInput>

                    <FloatingLabelInput label="توضیحات">

                        <TinyMce5For asp-for="Description" language="fa_IR" directionality="rtl"/>
                    </FloatingLabelInput>


                    <div class="form-group " style="margin-top:5px">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
